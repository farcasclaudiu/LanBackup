<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>@ViewData["Title"] - LAN Backup</title>
  <base href="/" />
  <link rel="manifest" href="manifest.json">
  <meta name="mobile-web-app-capable" content="yes">
  <link rel="icon" sizes="192x192" href="/android-icon-192x192.png">
  <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
  <script type="text/javascript">
    var clientSettings = {};
    function setClientSetting(setting, val)
    {
      clientSettings[setting] = val;
    }
    setClientSetting('admin_email', '@ClientConfiguration.Instance.ClientSettings.AdminEmail');
    setClientSetting('instrumentationEnabled', '@ClientConfiguration.Instance.ClientSettings.InstrumentationEnabled');
    setClientSetting('instrumentationKey', '@ClientConfiguration.Instance.ClientSettings.InstrumentationKey');
  </script>
</head>
<body>
  @RenderBody()
  


  @RenderSection("scripts", required: false)

  @*needed for signalR to work*@
  <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.1.js"></script>
  <script src="http://ajax.aspnetcdn.com/ajax/signalr/jquery.signalr-2.2.1.min.js"></script>
  @*signalR JS proxy - we dont use it*@
  @*<script src="~/signalr/hubs"></script>*@


  @*fix issue with navbar not collapsing after menu clicked/selected*@
  <script>
    $(document).ready(() => {
      $('.navbar-nav > li > a').on('click', function () {
        if ($(".navbar-toggle").css("display") != "none") {
          $('.navbar-toggle').trigger('click');
        }
      });
    });
  </script> 
  

</body>
</html>
